<div class='photos-destroy_form'>
  <div class="card">
    <div class="card-body">
      <div class="btn btn-danger btn-lg btn-block">
        写真を削除しますか？
      </div>
    </div>
    <!-- modal button -->
    <button type="button" class="btn btn-outline-danger" data-toggle="modal" data-target="#exampleModal">はい</button>
    <!-- madal start -->
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">本当に退会してよろしいですか？</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
          </div>
          <div class="modal-center my-3">
            <%= link_to('はい', "/photos/#{@photo.id}",{method: "delete"}) %>
            <button type="button" class="btn btn-secondary" data-dismiss="modal">戻る</button>
          </div>
        </div>
      </div>
    </div>
    <!-- modal end -->



    <div class="card-body text-center">
      <button class="btn btn-outline-secondary btn-lg center-block">
        <%= link_to('はい', "/photos/#{@photo.id}",{method: "delete"}) %>
      </button>



      <button class="btn btn-outline-secondary btn-lg center-block">
        <%= link_to('いいえ', "/photos") %>
      </button>
    </div>
  </div>
</div>
