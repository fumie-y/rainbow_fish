<!-- 新規投稿が成功するとphotos#indexに飛ぶ -->
<div class='Photos-new'>
  <% if @error_message %>
    <p class="alert alert-danger" role="alert">
      <%= @error_message %>
    </p>
  <% end %>
  <div class='form-error'>
    <% if flash[:notice] %>
      <p class="alert alert-danger" role="alert">
        <%= flash.now[:notice] %>
      </p>
    <% end %>
  </div>
  <div class='mt-4 mx-5'>
    <div class='user-edit-elements container'>
      <h3 class="border-bottom my-3 pb-2">新規投稿</h3>
      <div class='photo-new-element'>
        <div class="card" style="width: 30rem;">
          <div class="card-body my-2">
            <%= form_with model: @photo, local: true do |p| %>
              <div class='form-group'>
                <%= p.label :name, 'タイトル' %>
                <br>
                <%= p.text_field :title %>
              </div>
              <div class='form-group'>
                <%= p.label :name, 'コメント' %>
                <br>
                <%= p.text_area :photo_comment, size: "30x5" %>
              </div>
              <div class='form-group'>
                <%= p.label :name, 'RGB設定' %>
                <br>
                <%= p.select :rgb,[['R', 'R'], ['G', 'G'], ['B', 'B'], ['その他', 'その他']] %>
              </div>
              <div class='form-group'>
                <%= p.label :name, '写真' %>
                <br>
                <%= p.file_field :image %>
              </div>
              <div class='form-group'>
                <%= p.label :name, 'タグ' %>
                <br>
                <%= p.text_field :tag %>
              </div>
              <%= p.submit "投稿する", class: "mt-5 btn btn-primary btn-block" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
