<div class='photo-edit'>
  <div class='mt-5'>
    <div class='photo-edit-elements container'>
      <h4 class="border-bottom">写真編集画面</h4>
      <div class='photo-edit-box'>
        <div class='card' style="width: 40rem; height: 60rem;">
          <div class='card-body text-center'>
          <%= image_tag "#{@photo.image}", :class => "img-thumbnail" %>
        </div>
        <div class="card-body h5 pl-5">
          <%= form_for (@photo) do |p| %>
            <div class='form-group'>
              <%= p.label :name, 'タイトル' %>
              <br>
              <%= p.text_field :title %>
            </div>
            <div class='form-group pt-3'>
              <%= p.label :name, 'コメント' %>
              <br>
              <%= p.text_area :photo_comment %>
            </div>
            <div class='form-group pt-3'>
              <%= p.label :name, 'RGB設定' %>
              <br>
              <%= p.select :rgb,[['R', 'R'], ['G', 'G'], ['B', 'B'], ['その他', 'その他']] %>
            </div>
            <%= p.fields_for :tags do |tag| %>
              <div class='form-group pt-3'>
                <%= tag.label :tag, 'タグ' %>
                <%= tag.text_field :name, class: 'form-control' %>
              </div>
            <% end %>
            <%= p.submit :class => "btn btn-primary btn-block mt-5"  %>
          <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>