<div class='user-show'>
  <div class='show-elements'>
    <ul class="nav nav-tabs">
      <li class="nav-item">
        <%= link_to "#{@user.name}さんの投稿写真一覧", "/users/#{@user.id}", class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to "いいね！した数", "/users/#{@user.id}/likes_photos", class: "nav-link" %>
      </li>
    </ul>
  </div>
  <% @user_posted_photos.each do |photo| %>
    <%= photo.title %>
    <br>
      <% photo.tags.each do |tag| %>
        <%= tag.name %>
      <% end %>
  <% end %>

  <!-- 後で、photo#indexのviewに合わせるがとりあえず仮のコード -->
  <div class="card-photo" style="width: 10rem;">
    <img class="photo-img-top" src="<%#= "/photo_images/ICAM0011.JPG" %>">
    <div class="card-body">
      <h5 class="photo-title"><%#= "#{@user_posted_photos.title}"%></h5>
      <a class="photo-user"><%#= "#{@user.name}" %></a>
      <div class='photo-rgb'><%#= "RGB設定　#{@user_posted_photos.rgb}" %></div>
      <div class='photo-tag'><%#= "#{@photo_tags.name}" %></div>
      <div td align="right">
       <%= fa_icon 'heart' %>
      </div>
    </div>
  </div>
</div>