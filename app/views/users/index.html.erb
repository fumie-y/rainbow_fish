<div class='users-index'>
  <div class='mt-5 mx-5'>
    <div class='user-index-elements container'>
      <h3 class='border-bottom'>ユーザー一覧</h3>
      <div class='users-index-item'>
        <% @users.each do |user| %>
          <div class='card mt-2'>
            <div class='card-body'>
              <div class='pull-left img-thumbnail'>
                <% if user.profile_image.blank? %>
                  <%= image_tag "/user_images/default_user.jpg", :size => "100x100" %>
                <% else %>
                  <%= image_tag user.profile_image.thumb200.url %>
                <% end %>
              </div>
              <br>
              <h3 class='text-center'>
                <%= link_to(user.name, "/users/#{user.id}") %>
              </h3>
            </div>
          </div>
        <% end %>
        <div class='mt-3'>
          <%= paginate @users %>
        </div>
      </div>
    </div>
  </div>
</div>