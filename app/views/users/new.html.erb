<div class='main users-new_form'>
  <div class='user-new-elements'>
    <h3 class='border-bottom'>ユーザー新規登録</h3>
    <!-- TODO: error.messageは下記コードだと英語表記になるので,
    photo_new2マージ後gemfile追加する -->
    <% @user.errors.full_messages.each do |message| %>
      <div class="alert alert-danger" role="alert">
        <%= message %>
      </div>
    <% end %>
    <div class='users-login-box'>
      <%= form_for(:user, url: users_path) do |f| %>
        <%= f.label 'ユーザー名' %>
        <%= f.text_field :name, class: "form-control" %>
        <%= f.label 'パスワード' %>
        <%= f.password_field :password, class: "form-control" %>
        <br>
        <%= f.submit '新規登録', class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>

