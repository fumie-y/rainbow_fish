<div class='main users-new_form'>
  <div class='user-new-elements'>
    <h3 class='border-bottom'>ユーザー新規登録</h3>
    <div class='users-login-box'>
      <% if @error_message %>
          <div class='form_error'>
            <%= @error_message %>
          </div>
      <% end %>
      <%= form_for(:user, url: users_path) do |f| %>
        <%= f.label 'ユーザー名' %>
        <%= f.text_field :name, class: "form-control" %>
        <%= f.label 'パスワード' %>
        <%= f.password_field :password, class: "form-control" %>
        <br>
        <%= f.submit '新規登録', class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>

