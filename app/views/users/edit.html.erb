<div class='users-edit'>
  <div class='edit-elements'>
    <h4 class='border-bottom mt-5'>アカウント編集</h4>
    <!-- TODO: 画像の大きさをCSSで調整する（四角にする） -->
    <div class='user-edit'>
      <div class='profile-image-box'>
        <div class='row'>
          <div class="card-deck">
            <div class="col-lg-3">
              <div class="card img-thumbnail">
                <% if @user.profile_image.blank? %>
                  <%= image_tag "/user_images/default_user.jpg" %>
                <% else %>
                  <%= image_tag @user.profile_image.url %>
                <% end %>
                <div class="card-body text-center">
                  <h4 class="card-title text-center"><%= @user.name %></h4>
                  <p class="card-text">
                    <button type="button" class="btn btn-link">
                      <%= link_to('投稿写真一覧',"/users/#{@user.id}") %>
                    </button>
                    <button type="button" class="btn btn-link">
                      <%= link_to('いいね！した数',"/users/#{@user.id}/likes_photos") %>
                    </button>
                    <button type="button" class="btn btn-link">
                      <%= link_to('新規投稿','/photos/new') %>
                    </button>
                  </p>
                </div>
              </div>
            </div>
            <!-- TODO: 時間あればcardの長さを左側と揃える（長さを下に伸ばす） -->
            <div class="user-edit-box col-lg-9">
              <div class="card img-thumbnail">
                <div class="card-title">
                  <ul class="nav nav-tabs">
                    <li class="nav-item">
                      <%= link_to 'プロフィール', {:controller => "users", :action => "edit"}, {:class => "nav-link"} %>
                    </li>
                    <li class="nav-item">
                      <%= link_to '退会', {:controller => "users", :action => "destroy_form"}, {:class => "nav-link"} %>
                    </li>
                  </ul>
                </div>
                <div class="card-text">
                  <%= form_for (@user) do |u| %>
                    <div class="form-group mt-2">
                      <%= u.label :name, 'ユーザー名' %>
                      <%= u.text_field :name, class: 'form-control' %>
                    </div>
                    <div class="form-group mt-4">
                      <%= u.label :password, '新しいパスワード' %>
                      <%= u.password_field :password, class: 'form-control' %>
                    </div>
                    <div class="form-group mt-4">
                      <%= u.label 'もう一度パスワードを入力して下さい' %>
                      <%= u.password_field :password_confirmation, class: "form-control" %>
                    </div>
                    <div class="form-group my-5">
                      <%= u.label :profile_image, 'プロフィール画像' %>
                      <%= u.file_field :profile_image %>
                    </div>
                    <%= u.submit :class => " mt-5 btn btn-primary btn-block" %>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
